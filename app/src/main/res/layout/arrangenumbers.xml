<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".arrangenumbers.ArrangeNumbers"
    android:gravity="center"
    >


    <!-- Instruction Text -->

    <!-- Number Slots -->
    <!-- Draggable Numbers -->

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:padding="16dp"
        android:text="Drag the numbers into the correct order"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/slotContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructionText">

        <!-- Five Slots for Numbers -->
        <LinearLayout
            android:id="@+id/slot1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bordershape_blue"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/slot2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bordershape_blue"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/slot3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bordershape_blue"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/slot4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bordershape_blue"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/slot5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bordershape_blue"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numberContainer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slotContainer">


    </LinearLayout>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Level: 2 \n Questions Completed: 8"
        android:textSize="24sp"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/levelDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="TextView"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toHome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>